{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="row mt-4">
        <div class="row mt-4">
            <div class="col">
                <a class="btn btn-lg btn-success btn-sm mb-3" href="{{ path('movies') }}">Retour à la liste complète</a>
                <p class="lead mb-3">Résultats rechcerche par réalisateur</p>
                <table class="table table-striped table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>Nom du film</th>
                            <th>Réalisateur</th>
                            <th>Année de production</th>
                            <th>Nationalité</th>
                            <th>Dernière diffusion</th>
                        </tr>
                    </thead>
                    <tbody>

                        {% for movie in movies %}

                            <tr>
                                <td>{{ movie.nom }}</td>
                                <td>{{ movie.realisateur }}</td>
                                <td>{{ movie.annee_production }}</td>
                                <td>{{ movie.nationalite }}</td>
                                <td>{{ movie.derniere_diffusion }}</td>
                            </tr>

                        {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}